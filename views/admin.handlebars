                            <div>
                                <input type="password" class="form-control input-lg" id="password" value="">
                            </div>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="isAdmin"> Employee is an admin
                            </label>
                        </div>
                        <div class="form-group">
                            <div>
                                <button type="submit" class="btn btn-success">
                                    Register
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div><!-- /.modal-content -->
